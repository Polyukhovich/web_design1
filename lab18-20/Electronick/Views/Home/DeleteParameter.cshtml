@model Electronick.Models.Parameter

@{
    ViewData["Title"] = "DeleteParameter";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Parameter</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="DeleteParameter" method="post">
        <div class="form-group">
            <label asp-for="Id">Select Parameter to Delete:</label>
            <select asp-for="Id" class="form-control">
                @if (ViewBag.Parameters != null)
                {
                    @foreach (var parameter in ViewBag.Parameters)
                    {
                        <option value="@parameter.Id">@parameter.Name</option>
                    }
                }
            </select>
        </div>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
