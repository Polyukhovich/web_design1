@model Electronick.ViewModels.ParameterViewModel

@{
    ViewData["Title"] = "EditParameter";
}

<h1>EditParameter</h1>

<h4>Parameter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditParameter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NameCompany" class="control-label"></label>
                <input asp-for="NameCompany" class="form-control" />
                <span asp-validation-for="NameCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryCompany" class="control-label"></label>
                <input asp-for="CategoryCompany" class="form-control" />
                <span asp-validation-for="CategoryCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="15" style="width: 300px;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
