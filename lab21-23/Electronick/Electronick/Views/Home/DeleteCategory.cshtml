@model Electronick.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "DeleteCategory";
}

<h1>DeleteCategory</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameCategory)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.spacifications)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.spacifications)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.waranty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.waranty)
        </dd>
    </dl>
    
    <form asp-action="DeleteCategory" method="post">
        <div class="form-group">
            <label asp-for="Id">Select Parameter to Delete:</label>
            <select asp-for="Id" class="form-control">
                @if (ViewBag.Categories != null)
                {
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.NameCategory</option>
                    }
                }
            </select>
        </div>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
